@techreport{negronMicrosatelliteJunctionCounts2009,
  type = {Report},
  title = {Microsatellite Junction Counts Are Inversely Proportional to the Size, Gap, and Edit Distance of Its Constituent Units},
  shorttitle = {Microsatellite Junction Counts Are Inversely Proportional to Unit Size, Gap, and Edit Distance},
  author = {Negr{\'o}n, Daniel Antonio},
  year = {2009},
  month = may,
  journal = {CAS CS492 Directed Study},
  address = {Laboratory for Biocomputing and Informatics},
  institution = {Boston University},
  abstract = {Microsatellites are repetitive DNA sequences comprised of an approximate tandem array of a relatively short base unit. The sequencing of eukaryotes in particular has revealed that microsatellites comprise large percentages of genomes. Research has also established the mechanisms responsible and the presumed roles of microsatellites in genetic regulation and disease. Accordingly, it follows that microsatellites occur on a non-random basis. The slipped-strand mutation (SSM) model also suggests that approximate microsatellite copies result from the inaccurate expansion of an original unit. Inexact repeats hinder microsatellite detection algorithm. Consequently, this investigation treats inexact copies as a gap between two repeats of exact repeats, otherwise termed junctions. 	This report concludes that junction counts are inversely proportion to the unit size of its constituent 5' and 3' microsatellite units. In addition, junction counts are inversely proportional to the edit distance score and gap (distance between) of its constituent units. Prevailing low scores and small gaps were in accordance with the SSM model, suggesting that junctions primarily derive from an initial, exact microsatellite. The inter-arrival time of the Poisson process and Monte Carlo junction simulation produced very similar junction counts expected per genome on a random basis. However, the predictions based on the proportions of microsatellites observed per genome were much higher. The observational data from the cow, zebrafish, fly, and human alike concludes that junctions occurred significantly greater than expected in these eukaryotic genomes.},
  langid = {english},
  file = {/Users/dnanto/Library/CloudStorage/OneDrive-GeorgeMasonUniversity-O365Production/Zotero/Negrón - 2009 - Microsatellite junction counts are inversely propo.docx}
}

