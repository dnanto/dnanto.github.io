@misc{negronCladeSpecificMPXVPCR2023,
  type = {Preprint},
  title = {Clade-{{Specific MPXV PCR Assays}}},
  author = {Negr{\'o}n, Daniel Antonio and Tolli, Nicholas and Guertin, Stephanie and {Wollen-Roberts}, Suzanne and Mitchell, Shane and Haas, Jared and Pratt, Catherine and Jennings, Katharine and Abramson, Bradley and Brinkac, Lauren and Ashford, David},
